<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="isep.jfx.MainController">
   <children>
      <HBox>
         <children>
            <VBox>
               <children>
                  <Button mnemonicParsing="false" onAction="#showPlayerView" prefWidth="70.0" text="Jouer">
                     <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </VBox.margin>
                  </Button>
                  <Label fx:id="pl1label" text="Player one ">
                     <VBox.margin>
                        <Insets bottom="5.0" left="15.0" right="5.0" top="5.0" />
                     </VBox.margin>
                  </Label>
                  <Label fx:id="pl2label" text="Player two">
                     <VBox.margin>
                        <Insets bottom="5.0" left="15.0" right="5.0" top="5.0" />
                     </VBox.margin>
                  </Label>
                  <Button mnemonicParsing="false" onAction="#onNextTurn" prefWidth="70.0" text="Next Player">
                     <font>
                        <Font size="10.0" />
                     </font>
                     <VBox.margin>
                        <Insets left="6.0" />
                     </VBox.margin></Button>
               </children>
            </VBox>
            <GridPane fx:id="boardPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="640.0" prefWidth="640.0">
      </GridPane>
         </children>
      </HBox>
      <Label fx:id="statusLabel" alignment="CENTER" maxWidth="1.7976931348623157E308" text="Label" />
   </children>
</VBox>
